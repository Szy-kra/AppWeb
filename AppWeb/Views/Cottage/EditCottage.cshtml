@model AppWeb.Application.Cottage.Commands.EditCottage.EditCottageCommand

<h1 class="text-sun">Edytuj dane Twojego domku</h1>
<hr class="border-success" />

<form asp-action="Edit" method="post" class="cottage-form">
    @* Ukryte pole niezbędne do identyfikacji rekordu *@
    <input type="hidden" asp-for="EncodedName" />

    <div class="cottage-grid-container">

        @* KOLUMNA LEWA: Dane podstawowe (cottage-column-basic) *@
        <div class="cottage-column-basic">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold">Nazwa Domku</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaxPersons" class="control-label fw-bold">Maksymalna liczba osób</label>
                <input asp-for="MaxPersons" type="number" class="form-control" />
                <span asp-validation-for="MaxPersons" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label fw-bold">Cena za dobę [zł]</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Street" class="control-label fw-bold">Ulica / Adres</label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="City" class="form-label fw-bold">Miasto</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group mb-0">
                <label asp-for="PostalCode" class="form-label fw-bold">Kod pocztowy</label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>

        @* KOLUMNA PRAWA: Opisy (cottage-column-description + Flexbox) *@
        <div class="cottage-column-description">
            <div class="form-group">
                <label asp-for="Description" class="form-label fw-bold">Krótki opis (na listę)</label>
                <textarea asp-for="Description" class="form-control cottage-textarea-short"
                          placeholder="Krótka zachęta..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @* KLUCZOWY ELEMENT: flex-fill-column sprawia, że ta grupa wypełnia resztę wysokości *@
            <div class="form-group flex-fill-column">
                <label asp-for="About" class="form-label fw-bold">Szczegółowy opis domku</label>
                @* cottage-textarea-long otrzyma 800px wysokości dzięki Twojemu CSS *@
                <textarea asp-for="About" class="form-control cottage-textarea-long"
                          placeholder="Szczegóły o wyposażeniu..."></textarea>
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 d-flex align-items-center">
            <button type="submit" class="btn btn-primary btn-submit-step fw-bold shadow-sm py-3">
                Zatwierdź zmiany i przejdź do zdjęć
            </button>
            <a asp-action="IndexList" class="btn btn-outline-secondary py-3 ms-2">Anuluj</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}