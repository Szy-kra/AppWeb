@{
    ViewData["Title"] = "Strona Główna";
}

@* Sekcja główna z wymuszoną wysokością, żeby odepchnąć stopkę na sam dół *@
<div class="container-fluid d-flex align-items-center" style="min-height: 85vh; padding: 0 10%;">
    <div class="row w-100 align-items-center">

        @* LEWA STRONA: Teksty i Przyciski *@
        <div class="col-lg-7">
            <h1 class="display-3 fw-bold text-nature mb-3">
                Domki, campingi, agroturystyka.
            </h1>
            <h2 class="h3 text-sun mb-4">Zwiedzaj z nami Polskę!</h2>

            <p class="lead mb-5 text-light" style="opacity: 0.9; max-width: 600px;">
                Witaj na portalu, który łączy miłośników natury z najpiękniejszymi zakątkami kraju.
                Znajdź swoje wymarzone miejsce na odpoczynek lub podziel się swoim kawałkiem nieba z innymi.
            </p>

            <div class="d-flex gap-3">
                @* Używamy bezpośrednich linków href, żeby wykluczyć błędy TagHelperów *@
                <a href="/Cottage/Index" class="btn-sun text-decoration-none">PRZEJDŹ DO OFERTY</a>
                <a href="/Cottage/Create" class="btn-nature text-decoration-none">ZAMIEŚĆ OGŁOSZENIE</a>
            </div>
        </div>

        @* PRAWA STRONA: Logo w kółku *@
        <div class="col-lg-5 d-flex justify-content-center mt-5 mt-lg-0">
            @* Centrowanie zawartości kółka w pionie i poziomie *@
            <div class="bg-white rounded-circle d-flex flex-column align-items-center justify-content-center shadow-lg"
                 style="width: 380px; height: 380px; border: 12px solid rgba(255,255,255,0.1);">

                <img src="/images/logo.png" alt="Logo" class="img-fluid mb-2" style="max-width: 180px;">
                <h3 class="text-dark fw-bold m-0" style="letter-spacing: 2px; font-size: 1.8rem;">NASZE DOMKI</h3>
                <small class="text-muted fw-bold" style="letter-spacing: 1px;">WOLNE TERMINY</small>
            </div>
        </div>

    </div>
</div>